<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/containerRL">




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="17dp"
        android:alpha=".8"
        android:scaleType="centerCrop"
        android:src="@drawable/bd1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="86dp"
        app:srcCompat="@drawable/easy_home" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="295dp"
        android:background="@drawable/oval_btn"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="User Name"
        android:textColorHint="@color/Black"
        android:inputType="textEmailAddress"
        android:textColor="@color/Black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="343dp"
        android:layout_marginEnd="114dp"
        android:background="@drawable/oval_btn"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="291dp"
        android:background="@drawable/oval_btn"
        android:text="Login"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="signInUser"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="237dp"
        android:background="@drawable/oval_btn"
        android:text="Register Here"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="moveToSignUpPage"/>

    <ProgressBar
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/signInUserProgressBar"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        />


</RelativeLayout>